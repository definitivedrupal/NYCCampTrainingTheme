{#
/**
* @file Page template for the Twigtastic theme
*/
#}
<!-- Header Wrapper -->
<div class="l-header-wrapper">

  <!-- Header -->
  <div class="l-header container">
    {% if page.header %}
      {{ page.header }}
    {% endif %}

    <!-- Featured Wrapper -->
    <div class="l-features-wrapper">
      <!-- Featured -->
        <section class="l-features container">
          <header>

          </header>
          <div class="row">
            <div class="4u">
              <section>
                {% if page.triptych_first %}
                  {{ page.triptych_first }}
                {% endif %}
              </section>
            </div>
            <div class="4u">
              <section>
                {% if page.triptych_middle %}
                  {{ page.triptych_middle }}
                {% endif %}
              </section>
            </div>
            <div class="4u">
              <section>
                {% if page.triptych_last %}
                  {{ page.triptych_last }}
                {% endif %}
              </section>
            </div>
          </div>

        <ul class="actions">
          <li><a href="# button button-icon fa fa-file">Yes, Tell Me More</a></li>
        </ul>

      </section>
    </div>

    <!-- Banner Wrapper -->
    <div class="l-banner-wrapper">
      <div class="inner">
        <!-- Banner -->
          <section class="l-banner container">
            {% if page.banner %}
              {{ page.banner }}
            {% endif %}
          </section>
      </div>
    </div>

      <!-- Main Wrapper -->
    <div class="l-main-wrapper">

      <!-- Main -->
        <div class="l-main container">
          <div class="row">

            <!-- Content -->
              <div class="l-content 8u">
                {% if page.content %}
                {{ page.content }}
                {% endif %}
              </div>

            <!-- Sidebar -->
              <div class="l-sidebar 4u">

                <!-- Excerpts -->
                <section>
                  {% if page.excerpt %}
                    {{ page.excerpt }}
                  {% endif %}
                </section>

                <!-- Highlights -->
                <section>
                  <ul class="divided">
                    <li>
                      <!-- Highlight -->
                        <article class="is-highlight">
                          {% if page.ofnote %}
                            {{ page.ofnote }}
                          {% endif %}
                        </article>
                    </li>
                  </ul>
                </section>
              </div>
          </div>
        </div>
    </div>

  <!-- Footer Wrapper -->
  <div class="l-footer-wrapper">

    <!-- Footer -->
    <div class="l-footer container">
      <header>
        <h2>Questions or comments? <strong>Get in touch:</strong></h2>
      </header>

      <div class="row">
        <div class="6u">
          <section>
            {% if page.footer %}
              {{ page.footer }}
            {% endif %}
          </section>
        </div>

        <div class="6u">
          <section>
            {% if page.footer2 %}
              {{ page.footer2 }}
            {% endif %}
          </section>
        </div>
      </div>
    </div>

  <!-- Fin -->
  <div class="l-copyright container">
    <ul><li>Here Be Dragons</li></ul>
  </div>

</div>
